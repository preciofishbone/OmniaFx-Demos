{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": [ "es2015", "dom" ],
    "declaration": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "removeComments": false,
    "noImplicitAny": false,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "typeRoots": [ "./node_modules/@omnia/types", "./node_modules/@types" ]
  },
  "compileOnSave": true,
  "exclude": [
    "node_modules"
  ]
}